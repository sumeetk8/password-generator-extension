{
  "manifest_version": 3,
  "name": "Password Generator",
  "description": "Generate random passwords with custom options.",
  "version": "1.0",
  "permissions": [
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
